{
    "name": "evert/phpdoc-md",
    "description" : "PHP documentation generator, with markdown output",
    "keywords" : [ "PHP", "Markdown", "PHPDoc" ],
    "homepage" : "https://github.com/evert/phpdoc-md",
    "license" : "MIT",
    "require" : {
        "php" : ">=5.3.1",
        "twig/twig" : "~1.16.0"
    },
    "require-dev" : {
        "jms/serializer": "~1.7.0",
        "phpdocumentor/phpdocumentor": "^2.9.0"
    },
    "authors" : [
        {
            "name" : "Evert Pot",
            "email" : "evert@rooftopsolutions.nl",
            "homepage" : "http://www.rooftopsolutions.nl/",
            "role" : "Developer"
        }
    ],
    "autoload" : {
        "psr-0" : {
            "PHPDocMD" : "src/"
        }
    },
    "bin" : [
        "bin/phpdocmd"
    ],
    "config" : {
        "bin-dir" : "bin"
    }
}
